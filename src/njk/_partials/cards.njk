<div class="row">
{% for member in data.members %}
  <div class="card mb-3 mr-1 mt-3 mx-auto" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="/img/members/edited/{{ member.imgcut }}" class="card-img img-fluid" alt="An image of {{ member.name }}">
      </div>
      <div class="col-md-8">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{ member.name }}</h5>
          <p class="card-text">{{ member.cardtxt }}</p>
          
          <a href="{{ member.link }}" class="btn btn-primary mt-auto btn-position">Read More</a>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</div>

<br>

