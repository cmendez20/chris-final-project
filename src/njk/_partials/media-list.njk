<div class="row justify-content-center">
  {% for discs in data.discography %}
  <div class="col-sm-6 col-md-4 col-lg-3">
    <div class="media">
      <img class="discs-image mb-3 mr-3" src="img/discs/{{ discs.image }}" alt="An image of QUEEN's album: {{ discs.title }}">
      <div class="media-body">
        <h5 class="mt-0 font-weight-bold">{{ discs.title }}</h5>
        {{ discs.year }}
      </div>
    </div>
  </div>
  {% endfor %}
</div>




